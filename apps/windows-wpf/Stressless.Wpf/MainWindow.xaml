<Window x:Class="Stressless.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Stressless"
        Width="1280" Height="820"
        Background="{StaticResource Bg}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="False">

    <Border CornerRadius="16" BorderBrush="#22FFFFFF" BorderThickness="1" Background="{StaticResource Bg}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom titlebar -->
            <Grid Grid.Row="0" Background="#0F131A" Name="TitleBarRoot">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App mark + name -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,8,0">
                    <Border Width="28" Height="28" CornerRadius="10" Background="#141B26" BorderBrush="#223B82F6" BorderThickness="1">
                        <TextBlock Text="S" Foreground="{StaticResource Text}" FontWeight="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="Stressless" Foreground="{StaticResource Text}" FontWeight="SemiBold" FontSize="13"/>
                        <TextBlock Text="universal api client" Foreground="{StaticResource Muted}" FontSize="11"/>
                    </StackPanel>
                </StackPanel>

                <!-- Drag region -->
                <Border Grid.Column="1" Background="Transparent" Name="DragRegion" />

                <!-- Window controls + app controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                    <Button x:Name="BtnReload" Content="Reload" Style="{StaticResource TopPillButton}" Margin="0,0,8,0"/>
                    <Button x:Name="BtnDevtools" Content="DevTools" Style="{StaticResource TopPillButton}" Margin="0,0,10,0"/>

                    <Button x:Name="BtnMin" Style="{StaticResource CaptionButton}" ToolTip="Minimize">
                        <TextBlock Text="&#xE921;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </Button>
                    <Button x:Name="BtnMax" Style="{StaticResource CaptionButton}" ToolTip="Maximize">
                        <TextBlock x:Name="IcoMax" Text="&#xE922;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </Button>
                    <Button x:Name="BtnClose" Style="{StaticResource CaptionButtonClose}" ToolTip="Close">
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Web content -->
            <Border Grid.Row="1" Background="{StaticResource Bg}" CornerRadius="0,0,16,16" ClipToBounds="True">
                <wv2:WebView2 x:Name="Browser" />
            </Border>

            <!-- Resize grip -->
            <Rectangle Name="ResizeGrip" Width="14" Height="14" Fill="Transparent" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,2,2" Cursor="SizeNWSE"/>
        </Grid>
    </Border>
</Window>
